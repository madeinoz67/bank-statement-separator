# Testing Environment Configuration
# Optimized for automated testing with fallback mode

# LLM Provider Settings (configured for fallback testing)
LLM_PROVIDER=auto
OPENAI_API_KEY=test-key-for-automated-testing
OPENAI_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0
LLM_MAX_TOKENS=4000
LLM_FALLBACK_ENABLED=true

# Processing Configuration
CHUNK_SIZE=4000
CHUNK_OVERLAP=400
MAX_FILENAME_LENGTH=240
DEFAULT_OUTPUT_DIR=./test_output
PROCESSED_INPUT_DIR=./test_input/processed

# Testing-optimized logging
LOG_LEVEL=ERROR
ENABLE_AUDIT_LOGGING=false
LOG_FILE=./logs/test_processing.log

# Balanced validation for testing
VALIDATION_STRICTNESS=normal
PRESERVE_FAILED_OUTPUTS=false
ENABLE_ERROR_REPORTING=true
MAX_RETRY_ATTEMPTS=1
CONTINUE_ON_VALIDATION_WARNINGS=true

# Smaller limits for testing
MAX_FILE_SIZE_MB=10
MAX_PAGES_PER_STATEMENT=20
MAX_TOTAL_PAGES=100

# Testing security
ENABLE_FALLBACK_PROCESSING=true
INCLUDE_BANK_IN_FILENAME=true
DATE_FORMAT=YYYY-MM

# Error handling for testing
QUARANTINE_DIRECTORY=./test_quarantine
AUTO_QUARANTINE_CRITICAL_FAILURES=true
ERROR_REPORT_DIRECTORY=./test_error_reports

# Paperless integration (disabled for testing)
PAPERLESS_ENABLED=false

# Document validation for testing
MIN_PAGES_PER_STATEMENT=1
ALLOWED_FILE_EXTENSIONS=.pdf
REQUIRE_TEXT_CONTENT=false
MIN_TEXT_CONTENT_RATIO=0.0
