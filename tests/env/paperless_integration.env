# API Integration Test Environment for Paperless-ngx
# This file is for REAL API testing against a paperless-ngx instance
# DO NOT commit real credentials to version control

# Core Configuration
LLM_PROVIDER=auto
OPENAI_API_KEY=test-key-api-integration
LLM_TEMPERATURE=0
LLM_MAX_TOKENS=4000
LLM_FALLBACK_ENABLED=true

# Processing Configuration
CHUNK_SIZE=6000
CHUNK_OVERLAP=800
MAX_FILENAME_LENGTH=240
DEFAULT_OUTPUT_DIR=./test/output/api_integration
PROCESSED_INPUT_DIR=./test/processed/api_integration

# Security Configuration
ENABLE_AUDIT_LOGGING=true
LOG_LEVEL=DEBUG
LOG_FILE=./test/logs/api_integration.log

# Paperless-ngx Integration - REAL API Configuration
# ⚠️  REPLACE THESE WITH REAL VALUES FOR API TESTING ⚠️
PAPERLESS_ENABLED=true
PAPERLESS_URL=http://localhost:8000
PAPERLESS_TOKEN=your-real-api-token-here
PAPERLESS_TAGS=test-output,automated-integration
PAPERLESS_CORRESPONDENT=Test Bank API
PAPERLESS_DOCUMENT_TYPE=Bank Statement
PAPERLESS_STORAGE_PATH=Test Integration

# Paperless Input Configuration for API Testing
PAPERLESS_INPUT_TAGS=test-integration,bank-statement,unprocessed
PAPERLESS_INPUT_CORRESPONDENT=Test Bank
PAPERLESS_INPUT_DOCUMENT_TYPE=Raw Statement
PAPERLESS_MAX_DOCUMENTS=10
PAPERLESS_QUERY_TIMEOUT=30

# Error Handling for Integration Tests
QUARANTINE_DIRECTORY=./test/quarantine/api_integration
MAX_RETRY_ATTEMPTS=1
CONTINUE_ON_VALIDATION_WARNINGS=true
AUTO_QUARANTINE_CRITICAL_FAILURES=true
PRESERVE_FAILED_OUTPUTS=true
ENABLE_ERROR_REPORTING=true
ERROR_REPORT_DIRECTORY=./test/error_reports/api_integration

# Document Validation
MIN_PAGES_PER_STATEMENT=1
ALLOWED_FILE_EXTENSIONS=.pdf
REQUIRE_TEXT_CONTENT=true
MIN_TEXT_CONTENT_RATIO=0.1

# API Integration Test Control
# Set this to 'true' to enable API integration tests
PAPERLESS_API_INTEGRATION_TEST=false