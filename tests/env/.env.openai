# Test Configuration - OpenAI Provider
LLM_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# General LLM Configuration
LLM_TEMPERATURE=0
LLM_MAX_TOKENS=4000
LLM_FALLBACK_ENABLED=false

# Processing Configuration
CHUNK_SIZE=6000
CHUNK_OVERLAP=800
MAX_FILENAME_LENGTH=240
DEFAULT_OUTPUT_DIR=./test/output
PROCESSED_INPUT_DIR=./test/input/processed

# Security Configuration
ENABLE_AUDIT_LOGGING=true
LOG_LEVEL=INFO
LOG_FILE=./test/logs/openai_test.log
ALLOWED_INPUT_DIRS=./test/input
ALLOWED_OUTPUT_DIRS=./test/output
MAX_FILE_SIZE_MB=100

# Advanced Configuration
ENABLE_FALLBACK_PROCESSING=false
INCLUDE_BANK_IN_FILENAME=true
DATE_FORMAT=YYYY-MM
MAX_PAGES_PER_STATEMENT=50
MAX_TOTAL_PAGES=500

# Paperless-ngx Integration (disabled for testing)
PAPERLESS_ENABLED=false