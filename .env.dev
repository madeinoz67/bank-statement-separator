# Development Environment Configuration
# Optimized for development and debugging

# LLM Provider Settings
LLM_PROVIDER=openai
OPENAI_API_KEY=sk-test-dev-key-1234567890abcdef
OPENAI_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0
LLM_MAX_TOKENS=4000
LLM_FALLBACK_ENABLED=true

# Processing Configuration
CHUNK_SIZE=6000
CHUNK_OVERLAP=800
MAX_FILENAME_LENGTH=240
DEFAULT_OUTPUT_DIR=./dev_output
PROCESSED_INPUT_DIR=./dev_input/processed

# Development-friendly settings
LOG_LEVEL=DEBUG
ENABLE_AUDIT_LOGGING=true
LOG_FILE=./logs/dev_processing.log

# Lenient validation for easier development
VALIDATION_STRICTNESS=lenient
PRESERVE_FAILED_OUTPUTS=true
ENABLE_ERROR_REPORTING=true
MAX_RETRY_ATTEMPTS=1
CONTINUE_ON_VALIDATION_WARNINGS=true

# File processing
MAX_FILE_SIZE_MB=100
MAX_PAGES_PER_STATEMENT=50
MAX_TOTAL_PAGES=500

# Development security (relaxed)
ENABLE_FALLBACK_PROCESSING=true
INCLUDE_BANK_IN_FILENAME=true
DATE_FORMAT=YYYY-MM

# Error handling for development
QUARANTINE_DIRECTORY=./dev_quarantine
AUTO_QUARANTINE_CRITICAL_FAILURES=true
ERROR_REPORT_DIRECTORY=./dev_error_reports

# Paperless integration (disabled for dev)
PAPERLESS_ENABLED=false

# Document validation
MIN_PAGES_PER_STATEMENT=1
ALLOWED_FILE_EXTENSIONS=.pdf
REQUIRE_TEXT_CONTENT=true
MIN_TEXT_CONTENT_RATIO=0.1
